<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.one.MainActivity">

    <LinearLayout
        android:id="@+id/home_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorOrange">

        <ImageView
            android:id="@+id/Zxing"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_normal_code"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/sousuo"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:text="搜索一下"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorHui"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorinput"
            android:drawableRight="@drawable/ic_edit_search"/>

        <ImageView
            android:id="@+id/xiaoxi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_normal_message"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
